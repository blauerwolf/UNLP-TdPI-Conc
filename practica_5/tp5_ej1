{
    Se organiz칩 una competencia entre el equipo rojo y el equipo azul. Cada equipo consta
    de dos robots, y debe realizar una tarea:
    - Los robots R1 y R2 del equipo rojo debe juntar todas las flores de las avenidas 2 y 3
    respectivamente
    - Los robots A1 y A2 del equipo azul debe juntar todos los papeles de las calles 98 y
    99 respectivamente
    Al finalizar la competencia, un robot fiscalizador deber치 informar el equipo que junt칩 m치s
    objetos.
}
programa tp5_ej1
procesos
  proceso juntarPapeles(ES papeles: numero)
  comenzar
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      papeles := papeles + 1
  fin
  
  proceso juntarFlores(ES flores: numero)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      flores := flores + 1
  fin
  
  proceso esPuntoCritico(E av: numero; E ca: numero; ES ok: boolean)
  comenzar
    ok := F
    
    si (av = 2) & (ca = 98)
      ok := V
    sino
      si (av = 2) & (ca = 99)
        ok := V
      sino
        si (av = 3) & (ca = 98)
          ok := V
        sino
          si (av = 3) & (ca = 99)
            ok := V
          sino
            ok := F
  fin
  
  proceso recorrerAvenida(ES flores: numero)
  variables
    av, ca: numero
    danger, nextBloqueada, actualBloqueada: boolean
    
  comenzar
    nextBloqueada := F
    actualBloqueada := F
    
    mientras (PosCa < 100)
    
      juntarFlores(flores)
      esPuntoCritico(av + 1, ca, danger)
      si (danger)
        BloquearEsquina(av + 1, ca)
        nextBloqueada := V
      sino
        nextBloqueada := F
        
      mover
      
      si (actualBloqueada)
        LiberarEsquina(av, ca)
        actualBloqueada := F
        
      actualBloqueada := nextBloqueada

  fin
  
  proceso recorrerCalle(ES papeles: numero)
  variables
    av, ca: numero
    danger, nextBloqueada, actualBloqueada: boolean
  comenzar
    derecha
    actualBloqueada := F
    nextBloqueada := F
    
    mientras(PosAv < 100)
      av := PosAv
      ca := PosCa
    
      juntarPapeles(papeles)
      esPuntoCritico(av, ca + 1, danger)
      si (danger)
        BloquearEsquina(av, ca + 1)
        nextBloqueada := V
      sino
        nextBloqueada := F
        
      mover
      
      si (actualBloqueada)
        LiberarEsquina(av, ca)
        actualBloqueada := F
        
      actualBloqueada := nextBloqueada
  fin
  
  proceso inicializarRobots
  comenzar
    EnviarMensaje(1, R1)
    EnviarMensaje(2, R2)
    EnviarMensaje(3, A1)
    EnviarMensaje(4, A2)
  fin
  
  
areas
  AreaJ: AreaP(1, 1, 1, 1)  
  Comun: AreaPC(2, 98, 3, 99)
  
  Av2a: AreaP(2, 1, 2, 97)
  Av2b: AreaP(2, 100, 2, 100)
  
  Av3a: AreaP(3, 1, 3, 97)
  Av3b: AreaP(3, 100, 3, 100)
  
  Ca98a: AreaP(1, 98, 1, 98)
  Ca98b: AreaP(4, 98, 100, 98)
  
  Ca99a: AreaP(1, 99, 1, 99)
  Ca99b: AreaP(4, 99, 100, 99)
  
robots
  robot rojo
  variables
    id, flores: numero
    
  comenzar
    RecibirMensaje(id, jefe)    
    recorrerAvenida(flores)
    
    EnviarMensaje(id, jefe)
    EnviarMensaje(flores, jefe)
 
  fin
  
  robot azul
  variables
    id, papeles: numero
  comenzar
    RecibirMensaje(id, jefe)
    recorrerCalle(papeles)
    
    EnviarMensaje(id, jefe)
    EnviarMensaje(papeles, jefe)
    
  fin
  
  robot coordinador
  variables
    id, objetos, objR, objA: numero
  comenzar
    inicializarRobots
    objR := 0
    objA := 0
    
    repetir 4
      RecibirMensaje(id, *)
      si (id = 1)
        RecibirMensaje(objetos, R1)
        objR := objR + objetos
      sino
        si (id = 2)
          RecibirMensaje(objetos, R2)
          objR := objR + objetos
        sino
          si (id = 3)
            RecibirMensaje(objetos, A1)
            objA := objA + objetos
          sino
            RecibirMensaje(objetos, A2)
            objA := objA + objetos
              
    si (objR > objA)
      Informar('Gano Equipo Rojo', V)
    sino
      Informar('Gano Equipo Azul', V)
        
  fin
  
variables
  R1, R2: rojo
  A1, A2: azul
  jefe: coordinador
comenzar
  AsignarArea(jefe, AreaJ)
  AsignarArea(R1, Comun)
  AsignarArea(R2, Comun)
  AsignarArea(A1, Comun)
  AsignarArea(A2, Comun)
  AsignarArea(R1, Av2a)
  AsignarArea(R1, Av2b)
  AsignarArea(R2, Av3a)
  AsignarArea(R2, Av3b)
  AsignarArea(A1, Ca98a)
  AsignarArea(A1, Ca98b)
  AsignarArea(A2, Ca99a)
  AsignarArea(A2, Ca99b)
  
  Iniciar(jefe, 1, 1)
  Iniciar(R1, 2, 1)
  Iniciar(R2, 3, 1)
  Iniciar(A1, 1, 98)
  Iniciar(A2, 1, 99)
fin