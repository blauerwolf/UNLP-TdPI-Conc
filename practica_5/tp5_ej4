{
    Tres robots floreros tienen 8 intentos en total para juntar todas las flores dentro del
    cuadrante comprendido entre las esquinas (40,40) y (60,60). Para ello, en cada intento un
    robot fiscalizador indicar치 a un robot aleatorio la esquina a la que debe dirigirse. El
    fiscalizador calcular치 esta esquina de manera aleatoria. Al completarse los 8 intentos, los
    robots floreros deber치n depositar todas las flores juntadas en la esquina (10,10), y el robot
    fiscalizador deber치 informar la cantidad total de flores juntadas por los robots.
    Los robots floreros inician en las esquinas (1,1), (2,1) y (3,1) respectivamente, y el
    fiscalizador en la (4,1).
}

programa tp5_ej4
procesos
  proceso juntarFlores(ES flo: numero)
  comenzar 
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      flo := flo + 1
  fin

  proceso depositarFlores(E flo: numero)
  comenzar 
    repetir flo 
      depositarFlor
  fin
  
areas 
  cuadrante: AreaPC(40, 40, 60, 60)
  Esq10: AreaPC(10, 10, 10, 10)
  Esq1: AreaP(1, 1, 1, 1)
  Esq2: AreaP(2, 1, 2, 1)
  Esq3: AreaP(3, 1, 3, 1)
  EJf: AreaP(4, 1, 4, 1)

robots 
  robot florero 
  variables 
    id: numero
    ok: boolean
    x, y: numero
    av, ca: numero
    flores: numero
  comenzar 
    x := PosAv 
    y := PosCa

    RecibirMensaje(id, jefe)
    RecibirMensaje(ok, jefe)

    mientras (ok)
      RecibirMensaje(av, jefe)
      RecibirMensaje(ca, jefe)
      BloquearEsquina(av, ca)
      Pos(av, ca)
      juntarFlores(flores)
      Pos(x, y)
      LiberarEsquina(av, ca)

      RecibirMensaje(ok, jefe)

    BloquearEsquina(10, 10)
    depositarFlores(flores)
    Pos(x, y)
    LiberarEsquina(10, 10)
    EnviarMensaje(flores, jefe) 
  fin

  robot fiscalizador 
  variables 
    id: numero
    av, ca: numero
    flo, totFlo : numero
  comenzar
    totFlo := 0

    EnviarMensaje(1, r1)
    EnviarMensaje(2, r2)
    EnviarMensaje(3, r3)

    repetir 8
      Random(id, 1, 3)
      Random(av, 40, 60)
      Random(ca, 40, 60)

      si (id = 1)
        EnviarMensaje(V, r1)
        EnviarMensaje(av, r1)
        EnviarMensaje(ca, r1)
      sino 
        si (id = 2)
          EnviarMensaje(V, r2)
          EnviarMensaje(av, r2)
          EnviarMensaje(ca, r2)
        sino
          EnviarMensaje(V, r3)
          EnviarMensaje(av, r3)
          EnviarMensaje(ca, r3)
          
    EnviarMensaje(F, r1)
    EnviarMensaje(F, r2)
    EnviarMensaje(F, r3)
    
    repetir 3
      RecibirMensaje(flo, *)
      totFlo := totFlo + flo
      
    Informar(totFlo)
  fin

variables 
  r1, r2, r3: florero 
  jefe: fiscalizador
comenzar 
  AsignarArea(r1, Esq1)
  AsignarArea(r2, Esq2)
  AsignarArea(r3, Esq3)
  AsignarArea(jefe, EJf)
  AsignarArea(r1, cuadrante)
  AsignarArea(r2, cuadrante)
  AsignarArea(r3, cuadrante)
  AsignarArea(r1, Esq10)
  AsignarArea(r2, Esq10)
  AsignarArea(r3, Esq10)
  
  Iniciar(r1, 1, 1)
  Iniciar(r2, 2, 1)
  Iniciar(r3, 3, 1)
  Iniciar(jefe, 4, 1)
fin