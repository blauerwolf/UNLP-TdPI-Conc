programa tp4_ej1
procesos

  proceso juntarFlores
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
  fin
  
  proceso inicializarRobots
  comenzar
    EnviarMensaje(1, r1)
    EnviarMensaje(2, r2)
    EnviarMensaje(3, r3)
  fin
  
  proceso deliveryFlores(E av: numero; E ca: numero; E flo: numero)
  comenzar
    Pos(av, ca)
    repetir flo
      depositarFlor
    Pos(100, 100)
  fin
  
  proceso avanzarDejandoFlores
  comenzar
    mientras ((HayFlorEnLaBolsa) & (PosCa < 100))
      depositarFlor
      mover
    si (HayFlorEnLaBolsa) & (PosCa = 100)
      depositarFlor
  fin
    
areas
  Av1: AreaPC(1, 1, 1, 100)
  Av2: AreaPC(2, 1, 2, 100)
  Av3: AreaPC(3, 1, 3, 100)
  EJf: AreaP(100, 100, 100, 100)
robots
  robot servidor
  variables
    id, av, ca, flo, finalizados: numero
    
  comenzar
    finalizados := 0
    juntarFlores
    
    inicializarRobots
    
    mientras ~(finalizados = 3)
      RecibirMensaje(id, *)
      si (id = 1)
        RecibirMensaje(flo, r1)
        si (flo <> 0)
          RecibirMensaje(av, r1)
          RecibirMensaje(ca, r1)
          deliveryFlores(av, ca, flo)
          EnviarMensaje(V, r1)
        sino
          finalizados := finalizados + 1
      sino
        si (id = 2)
          RecibirMensaje(flo, r2)
          si (flo <> 0)
            RecibirMensaje(av, r2)
            RecibirMensaje(ca, r2)
            deliveryFlores(av, ca, flo)
            EnviarMensaje(V, r2)          
          sino
            finalizados := finalizados + 1
        
        sino
          RecibirMensaje(flo, r3)
          si (flo <> 0)
            RecibirMensaje(av, r3)
            RecibirMensaje(ca, r3)
            deliveryFlores(av, ca, flo)
            EnviarMensaje(V, r3)
          sino
            finalizados := finalizados + 1
            
  fin
  
  robot cliente
  variables
    id, flo, av, ca: numero
    ACK: boolean
  comenzar
    RecibirMensaje(id, srv)
    
    mientras (PosCa < 100)
      av := PosAv
      ca := PosCa
      
      Random(flo, 1, 4)
      EnviarMensaje(id, srv)
      EnviarMensaje(flo, srv)
      EnviarMensaje(av, srv)
      EnviarMensaje(ca + 1, srv)
      
      RecibirMensaje(ACK, srv)
      
      mover
      juntarFlores
      Pos(av, ca)
      
      avanzarDejandoFlores
      
   
    EnviarMensaje(id, srv)
    EnviarMensaje(0, srv)
     
      
  fin
  
variables
  srv: servidor
  r1, r2, r3: cliente
comenzar
  AsignarArea(r1, Av1)
  AsignarArea(r2, Av2)
  AsignarArea(r3, Av3)
  AsignarArea(srv, EJf)
  AsignarArea(srv, Av1)
  AsignarArea(srv, Av2)
  AsignarArea(srv, Av3)
  Iniciar(srv, 100, 100)
  Iniciar(r1, 1, 1)
  Iniciar(r2, 2, 1)
  Iniciar(r3, 3, 1)

fin